source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.0.rc1'

# Forcing Bundler to install version 1.3.7 of the sqlite3 gem. 
# Note that we’ve also taken this opportunity to arrange for the gem
# to be included only in a development environment, which prevents 
# potential conflicts with the database used by Heroku

group :development do
  gem 'sqlite3', '1.3.7'
end

group :assets do
  gem 'sass-rails',   '4.0.0.rc1'
  gem 'coffee-rails', '4.0.0'
  gem 'uglifier', '1.0.3'
end

gem 'jquery-rails', '2.2.1'
gem 'turbolinks', '1.0.0'
gem 'jbuilder', '1.0.1'

